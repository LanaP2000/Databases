@model Music_Store.Models.MusicRepository

@{
    ViewData["Title"] = "Music Store";
}

<h2 style="font-family: 'Dancing Script', cursive; text-align:center;">Music Store</h2>

<p>
    <b><a asp-action="Create" style="color:#c4aead" class="btn btn-default">Add New</a></b>
</p>

<!-- This is the 3rd task of the Take Home Exam -->
<!-- The 1st two parts are: /Shared/_layout.cshtml and /Home/Index.cshtml -->
<!-- I decided not to include all 5 pages because they were meaningless; they were designed for front-end assignment; this one is with form -->
<!-- The inspiration is my 5th assignment, though -->

<form asp-controller="Musics" asp-action="Index" method="get">
    <p>
        <br>
        Year: <input type="text" name="year_item" style="margin-right: 12px;">
        Genre:
        <select asp-for="music_genre" asp-items="Model.genres">
            <option value="">All</option>
        </select>
        <br>
        <input type="submit" value="Filter" style="color:#c4aead; margin-top: 12px;" class="btn btn-default" />
    </p>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.musics[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.musics[0].Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.musics[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.musics[0].Year)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.musics)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        <b><a asp-action="Edit" asp-route-id="@item.ID" style="color:#c4aead" class="btn btn-default">Edit</a></b> |
                        <b><a asp-action="Details" asp-route-id="@item.ID" style="color:#c4aead" class="btn btn-default">Details</a></b> |
                        <b><a asp-action="Delete" asp-route-id="@item.ID" style="color:#c4aead" class="btn btn-default">Delete</a></b>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>